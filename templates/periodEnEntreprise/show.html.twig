{% extends 'base.html.twig' %}

{% block title %}Période en entreprise
{% endblock %}

{% block body %}
	<h1 class="mb-4">Détail de la période en entreprise</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>ID</th>
				<td>{{ period_en_entreprise.id }}</td>
			</tr>
			<tr>
				<th>Date de début</th>
				<td>{{ period_en_entreprise.dateDebut ? period_en_entreprise.dateDebut|date('d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Date de fin</th>
				<td>{{ period_en_entreprise.dateFin ? period_en_entreprise.dateFin|date('d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Formation</th>
				<td>
					{{ period_en_entreprise.formation.nom }}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_period_en_entreprise_index') }}" class="btn btn-secondary">Retour à la liste</a>
	<a href="{{ path('app_period_en_entreprise_edit', {'id': period_en_entreprise.id}) }}" class="btn btn-primary">Modifier</a>

	{{ include('period_en_entreprise/_delete_form.html.twig') }}
{% endblock %}
