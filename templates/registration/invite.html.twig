{% extends 'base.html.twig' %}

{% block title %}Inscription par invitation
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-8 col-sm-10">
				<div class="card shadow-sm">
					<div class="card-body">
						<h1 class="card-title text-center mb-4">Créer un compte</h1>
						<p class="text-center mb-4">Inscription pour :
							<strong>{{ email }}</strong>
						</p>

						{{ form_start(registrationForm, {'attr': {'class': 'needs-validation','novalidate':'novalidate'}}) }}
						{{ form_row(registrationForm.nom, {'attr': {'class':'form-control', 'placeholder': 'Entrez votre nom'}}) }}
						{{ form_row(registrationForm.prenom, {'attr': {'class':'form-control', 'placeholder': 'Entrez votre prénom'}}) }}
						{{ form_row(registrationForm.codepostal, {'attr': {'class':'form-control', 'placeholder': 'Entrez votre code postal'}}) }}
						{{ form_row(registrationForm.ville, {'attr': {'class':'form-control', 'placeholder': 'Entrez votre ville nom'}}) }}
						{{ form_row(registrationForm.email, {'attr': {'class':'form-control'}}) }}


						{{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control','placeholder': 'Entrez votre mot de passe'}}) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>
					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary w-50 mx-auto">
							S'inscrire</button>
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
