{% extends 'base.html.twig' %}

{% block title %}Invitation index
{% endblock %}

{% block body %}
	<h1>Invitation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Token</th>
				<th>ExpiresAT</th>
				<th>Used</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for invitation in invitations %}
				<tr>
					<td>{{ invitation.id }}</td>
					<td>{{ invitation.email }}</td>
					<td>{{ invitation.token }}</td>
					<td>{{ invitation.expiresAT ? invitation.expiresAT|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ invitation.used ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_invitation_show', {'id': invitation.id}) }}">show</a>
						<a href="{{ path('app_invitation_edit', {'id': invitation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_invitation_new') }}">Create new</a>
{% endblock %}
